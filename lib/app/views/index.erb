<% if defined? idea_updated %>
  <h2>Success! The idea below has been updated successfully:</h2>
  Title: <h3><%= updated_idea.title %></h3>
  Description: <div><%= updated_idea.description %></div>
<% end %>
<form name="ideas-form" action="/" method="POST">
  <p>
  Your Idea:
  </p>
  <input type="text" name="idea[title]" /><br />
  <textarea name="idea[description]"></textarea><br />
  <input type="submit"/>
</form>
<ul>
  <% ideas.each_with_index do |idea, id| %>
    <li>
      <%= idea.title %> (<%= id %>)<br />
      <%= idea.description %>
      <a href="/<%= id %>/edit">Edit</a>
      <form name="item-form" action="/<%= id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE" />
        <input type="submit" value="delete" />
      </form>
    </li>
  <% end %>
</ul>
